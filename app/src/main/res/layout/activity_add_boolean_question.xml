<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Add_boolean_question">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <EditText
            android:id="@+id/add_boolean_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:padding="30dp"
            android:maxLines="3"
            android:layout_margin="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Question"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct\nAnswer"
            android:textColor="#ffffff"
            android:layout_gravity="start"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <RadioGroup
                android:id="@+id/boolean_options"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:buttonTint="#ffffff"
                    android:text="A"
                    android:textColor="#ffffff"
                    android:textSize="16dp">

                </RadioButton>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:buttonTint="#ffffff"
                    android:text="B"
                    android:textColor="#ffffff"
                    android:textSize="16dp">

                </RadioButton>


            </RadioGroup>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/boolean_answers"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/add_optionA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_border"
                    android:padding="15dp"
                    android:maxLines="3"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Option"/>

                <EditText
                    android:id="@+id/add_optionB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_border"

                    android:padding="15dp"
                    android:maxLines="3"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Option"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/boolean_upload"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:layout_gravity="center"
            android:background="@drawable/button_edit"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginTop="30dp"/>


    </LinearLayout>

</ScrollView>